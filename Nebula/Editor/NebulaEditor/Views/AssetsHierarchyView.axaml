<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="1000"
			 xmlns:vm ="using:NebulaEditor.ViewModels"
			 x:DataType="vm:AssetsHierarchyViewModel"
             x:Class="NebulaEditor.Views.AssetsHierarchyView">

	<UserControl.DataContext>
		<vm:AssetsHierarchyViewModel />
	</UserControl.DataContext>
	
	<TreeView ItemsSource="{Binding Nodes}" SelectionMode="Multiple" Background="#333333">

		<TreeView.ItemTemplate>
			<TreeDataTemplate ItemsSource="{Binding  SubNodes}" >
				<StackPanel Orientation="Horizontal" Spacing="2" Margin="-10, 0, 0, 0" Height="25" VerticalAlignment="Center">
					<Image Source="{Binding Icon}" Height="20" Width="20"/>
					<Label Content="{Binding Title}" VerticalAlignment="Center" FontSize="15"/>
				</StackPanel>
			</TreeDataTemplate>
		</TreeView.ItemTemplate>
		
	</TreeView>
	
</UserControl>
