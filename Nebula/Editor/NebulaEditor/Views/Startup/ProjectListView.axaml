<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:NebulaEditor.ViewModels.Startup"
			 mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="450"
             x:CompileBindings="True"
			 x:DataType="vm:ProjectListViewModel"
             x:Class="NebulaEditor.Views.ProjectListView">

	<Design.DataContext>
		<vm:ProjectListViewModel/>
	</Design.DataContext>

	<ListBox SelectionMode="Single,Toggle">
		<ListBox.Items>
			<Grid RowDefinitions="0.5*,0.5*" ColumnDefinitions="0.1*, 0.9*">
				<Image Grid.Column="0" Grid.RowSpan="2" Source="/Assets/default_project_icon.jpg"></Image>
				<Grid VerticalAlignment="Top" Grid.Column="1" Grid.Row="0"
					  ColumnDefinitions="0.33*, 0.33* , 0.33*">
					<Label Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20">ProjectName</Label>
					<Label Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Center" FontSize="15">(Engine Version)</Label>
					<Label Grid.Column="2" VerticalAlignment="Center"  HorizontalAlignment="Center" FontSize="10">(Last Edit Time)</Label>
				</Grid>
				<Label FontSize="15" Grid.Column="1" Grid.Row="1">Path</Label>
			</Grid>
		</ListBox.Items>
	</ListBox>
</UserControl>
